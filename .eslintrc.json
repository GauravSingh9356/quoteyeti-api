{
  "extends": "airbnb-base",
  "env": {
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": false
    },
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "rules":{
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ]
  }
}
